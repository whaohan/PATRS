                        <p>Report #<%= report.id %></p>
                    </div>
                    <div class="bodyBox">
                        <p>Street Address：<%= report.address %></p>
                        <p>Size：<%= report.size %></p>
                        <p>Location：<%= report.location %></p>
                        <p>Status：
                            <span class="badge badge-primary"><%= report.status %></span>
                        </p>
                    </div>
                </div>
