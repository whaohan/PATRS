<body>
    <div class="container">
        <div class="card my-3">
            <div class="card-body">
                <h3 class="card-title text-center">Pothole Tracking and Repair System</h3>
                <!-- <p class="card-text">Report the location and severity of potholes!</p> -->
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-primary">Report Potholes</button>
                </div>
            </div>
        </div>
        <p>The lists of reported potholes:</p>
        <div class="boxGroup">
            <% for (var i = 0; i < reports.length; i++) { %>
                <div class="cardBox">
                    <div class="headerBox">
                        <p>Item <%= i + 1 %></p>
                    </div>
                    <div class="bodyBox">
                        <p>Identifying Number：<%= reports[i].id %></p>
                        <p>Street Address：<%= reports[i].address %></p>
                        <p>Size：<%= reports[i].size %></p>
                        <p>Location：<%= reports[i].location %></p>
                        <p>Status：
                            <span class="badge badge-primary"><%= reports[i].status %></span>
                        </p>
                    </div>
                </div>
            <% }) %>
